{
  "manifest_version": 3,
  "name": "Youtube Ad Blocker",
  "description": "Block ads on Youtube.",
  "version": "1.0.0",
  "icons": { "128": "icon.png" },
  "action": {},
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "ad-blocker/script.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["ad-blocker/content-script.js"]
    }
  ]
}
